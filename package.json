{
	"name": "phaser3-parcel-template",
	"version": "1.0.1",
	"description": "A typescript template project for Phaser 3 using Parceljs",
	"scripts": {
		"start": "parcel src/index.html -p 8000",
		"build": "parcel build src/index.html --out-dir docs",
		"test": "echo \"Error: no test specified\" && exit 1",
		"lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
		"deploy": "gh-pages -d dist",
		"predeploy": "rm -rf dist && parcel build src/index.html --public-url https://2021programacion.github.io/phaser-api-traduci-la"
	},
	"author": "supertommy",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/2021programacion/phaser-api-traduci-la.git"
	},
	"homepage": "https://2021programacion.github.io/phaser-api-traduci-la",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^2.29.0",
		"@typescript-eslint/parser": "^2.29.0",
		"eslint": "^6.8.0",
		"gh-pages": "^3.2.3",
		"minimist": ">=1.2.2",
		"parcel-plugin-clean-easy": "^1.0.2",
		"parcel-plugin-static-files-copy": "^2.4.3",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"phaser": "^3.55.2",
		"regenerator-runtime": "^0.13.9"
	},
	"parcelCleanPaths": [
		"dist"
	],
	"staticFiles": {
		"staticPath": "public",
		"watcherGlob": "**"
	}
}
